<div class="question">
  <%= form_for(@request) do |f| %>
    
    <h4>Selected Type: Question</h4>
    <hr>
    <br>
    <%= f.hidden_field :queue_type, :value => "question" %>
    <%= f.label :info %>
    <%= f.text_area :info, class: 'form-control' %>
    <br>
    <%= f.submit "Submit your Request", class: "btn btn-primary  pull-right" %>
  <% end %>
</div>

